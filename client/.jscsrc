{
  "preset": "airbnb",
  "fileExtensions": [
    ".js",
    ".jsx"
  ],
  "excludeFiles": [
    "assets/**",
    "build/**",
    "node_modules/**"
  ],
  "validateQuoteMarks": {
    "mark": "'",
    "escape": true,
    "ignoreJSX": true
  },
  "requireCamelCaseOrUpperCaseIdentifiers": {
    "allowedSuffixes": ["_"]
  },
  "maximumLineLength": 120
}
